{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "esnext",
      "lib": [
        "es6",
        "es2017",
        "dom",
        "esnext"
      ],
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/platforms", "**/*.test.ts"]
}
