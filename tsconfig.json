{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2017",
      "lib": [
        "es6",
        "es2017",
        "dom",
        "esnext"
      ],
      "jsx": "react",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/platforms/vue", "**/*.test.ts"]
}
